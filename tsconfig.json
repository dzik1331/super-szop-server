{
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./dist"

    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist"
    ]
}
